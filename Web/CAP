    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const canvas = document.getElementById('canvasFirma');
            const ctx = canvas.getContext('2d');
            const btnFinalizar = document.getElementById('btnFinalizar');
            const btnBorrar = document.getElementById('borrarFirma');
            let dibujando = false;

            canvas.width = canvas.offsetWidth;
            canvas.height = canvas.offsetHeight;

            function obtenerPosicion(e) {
                const rect = canvas.getBoundingClientRect();
                const clienteX = e.clientX || (e.touches && e.touches[0].clientX);
                const clienteY = e.clientY || (e.touches && e.touches[0].clientY);
                return { x: clienteX - rect.left, y: clienteY - rect.top };
            }

            function iniciar(e) {
                dibujando = true;
                const pos = obtenerPosicion(e);
                ctx.beginPath();
                ctx.moveTo(pos.x, pos.y);
            }

            function trazar(e) {
                if (!dibujando) return;
                if (e.touches) e.preventDefault();
                const pos = obtenerPosicion(e);
                ctx.lineWidth = 2;
                ctx.lineCap = "round";
                ctx.strokeStyle = "#000";
                ctx.lineTo(pos.x, pos.y);
                ctx.stroke();
            }

            canvas.addEventListener('mousedown', iniciar);
            canvas.addEventListener('mousemove', trazar);
            window.addEventListener('mouseup', () => dibujando = false);
            canvas.addEventListener('touchstart', iniciar);
            canvas.addEventListener('touchmove', trazar);
            canvas.addEventListener('touchend', () => dibujando = false);

            btnBorrar.addEventListener('click', () => {
                ctx.clearRect(0, 0, canvas.width, canvas.height);
            });

            btnFinalizar.addEventListener('click', () => {
                const si = document.getElementById('opcionSi').checked;
                const no = document.getElementById('opcionNo').checked;
                const nombre = document.getElementById('nombreModelo').value;

                if (!si && !no) return alert("Selecciona SÍ o NO.");
                if (nombre.trim() === "") return alert("Ingresa tu nombre.");

                const firmaImagen = canvas.toDataURL("image/png");
                const linkFirma = document.createElement('a');
                linkFirma.href = firmaImagen;
                linkFirma.download = `firma_${nombre.replace(/\s+/g, '_')}.png`;
                linkFirma.click();

                const decision = si ? "ACEPTA" : "NO ACEPTA";
                const fecha = new Date().toLocaleString();
                const miCorreo = "gatosauriocrackworl@gmail.com";
                const asunto = encodeURIComponent(`Acuerdo de Confianza - ${nombre}`);
                const cuerpo = encodeURIComponent(`Hola, soy ${nombre}.\n\nHe revisado el Acuerdo el día ${fecha}.\nMi decisión es: ${decision}.\n\nAdjunto envío mi firma PNG descargada.`);

                window.location.href = `mailto:${miCorreo}?subject=${asunto}&body=${cuerpo}`;
                alert("Firma descargada. Por favor adjúntala en el correo.");
            });
        });
    </script>
</body>
